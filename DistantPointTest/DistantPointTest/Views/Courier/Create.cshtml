@model DistantPointTest.Models.FullCourierViewModel

<div class="row">
    <div class="col-12">
        <h3>Create Courier</h3>
    </div>
    <div class="col-12">
        <form method="post">
            <div class="row form-group">
                <label>Courier Name</label>
                <input asp-for="Courier.CourierName" class="form-control" />
            </div>
            <div class="row form-group">
                <div class="col-6">
                    <label>Min Weight</label>
                    <input asp-for="Courier.MinWeight" class="form-control" />
