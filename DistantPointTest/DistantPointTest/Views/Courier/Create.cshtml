                    <input asp-for="Pricer.MaxDimensions4" class="form-control" />
                </div>
                <div class="col-4">
                    <label>Price Dimension 4</label>
                    <input asp-for="Pricer.PriceDimension4" class="form-control" />
                </div>
            </div>
            <div class="row">
                <input type="submit" class="form-control btn btn-outline-info" value="Add Courier" />
            </div>
        </form>
    </div>
</div> 
