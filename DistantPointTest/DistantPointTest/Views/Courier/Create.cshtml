                <div class="col-4">
                    <label>Min Dimension 3</label>
                    <input asp-for="Pricer.MinDimensions3" class="form-control" />
                </div>
                <div class="col-4">
                    <label>Max Dimension 3</label>
                    <input asp-for="Pricer.MaxDimensions3" class="form-control" />
                </div>
                <div class="col-4">
                    <label>Price Dimension 3</label>
                    <input asp-for="Pricer.PriceDimension3" class="form-control" />
                </div>
            </div>
            <div class="row form-group">
                <div class="col-4">
                    <label>Min Dimension 4</label>
                    <input asp-for="Pricer.MinDimensions4" class="form-control" />
                </div>
                <div class="col-4">
